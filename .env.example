# ============================================
# RESEND EMAIL API
# ============================================
# API kľúč pre Resend emailovú službu (povinný pre kontaktný formulár)
# Získaj na: https://resend.com/api-keys
# Free tier: 100 emailov/deň, 3000 emailov/mesiac
RESEND_API_KEY=re_tvoj_resend_api_key_tu
FROM_EMAIL=noreply@taxinearme.sk

# Partner notification email (kam prídu notifikácie o nových návrhoch)
PARTNER_NOTIFICATION_EMAIL=tvoj@email.com

# ============================================
# OPENROUTESERVICE ROUTING API
# ============================================
# API kľúč pre presné výpočty cestných vzdialeností
# Získaj ZADARMO na: https://openrouteservice.org/dev/#/signup
# Free tier: 2000 requestov/deň
# Bez tohto kľúča sa použije menej presný OSRM
ORS_API_KEY=tvoj_openrouteservice_api_key_tu

# ============================================
# GOOGLE PLACES API
# ============================================
# Kľúč pre Google Places API (povinný pre GBP scraper)
# Získaj na: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=tvoj_google_places_api_key_tu

# ============================================
# ADMIN PANEL
# ============================================
# GitHub Personal Access Token pre ukladanie dát
# Vytvor na: https://github.com/settings/tokens
# Potrebné oprávnenia: repo (plný prístup k repozitáru)
GITHUB_TOKEN=tvoj_github_token_tu

# GitHub repozitár kde sa ukladajú dáta
GITHUB_OWNER=fabianmarian8
GITHUB_REPO=taxi-vision-studio

# Heslo pre prístup do admin panela
# Zmeň na vlastné silné heslo!
ADMIN_PASSWORD=tvoje_admin_heslo_tu

# ============================================
# VERCEL NASTAVENIA
# ============================================
# Tieto promenné je potrebné nastaviť vo Vercel Dashboard:
# https://vercel.com/[tvoj-team]/taxi-vision-studio/settings/environment-variables
#
# KRITICKÉ: Všetky premenné musia byť nastavené v týchto prostrediach:
# ✓ Production
# ✓ Preview
# ✓ Development
#
# Potrebné premenné vo Vercel:
# - RESEND_API_KEY (pre kontaktný formulár)
# - ORS_API_KEY (pre presné cestné vzdialenosti - ODPORÚČANÉ)
# - GOOGLE_PLACES_API_KEY (pre GBP scraper)
# - GITHUB_TOKEN (pre admin panel)
# - GITHUB_OWNER (pre admin panel)
# - GITHUB_REPO (pre admin panel)
# - ADMIN_PASSWORD (pre admin panel)
#
# Bez správnej konfigurácie všetkých prostredí funkcie nebudú fungovať!

# ============================================
# UPSTASH REDIS (RATE LIMITING)
# ============================================
# Redis pre rate limiting admin login endpointov
# Získaj ZADARMO na: https://upstash.com/
# Free tier: 10,000 commandov/deň
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# ============================================
# SENTRY ERROR MONITORING
# ============================================
# Sentry pre zachytávanie chýb na frontende aj backende
# Vytvor projekt na: https://sentry.io/
# DSN nájdeš v Settings > Projects > [project] > Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ORG=tvoja-organizacia
SENTRY_PROJECT=taxi-vision-studio
# Auth token pre upload source maps (potrebný len pre CI/CD)
# Vytvor na: https://sentry.io/settings/auth-tokens/
SENTRY_AUTH_TOKEN=sntrys_xxx

# ============================================
# STRIPE PAYMENTS
# ============================================
# Stripe API keys pre payments a subscription
# Získaj na: https://dashboard.stripe.com/apikeys
# Test keys začínajú sk_test_, live keys sk_live_
STRIPE_SECRET_KEY=sk_test_tvoj_stripe_secret_key_tu

# Price IDs pre subscription plány (nájdeš v Stripe Dashboard > Products)
STRIPE_PREMIUM_PRICE_ID=price_tvoj_premium_price_id_tu
STRIPE_PARTNER_PRICE_ID=price_tvoj_partner_price_id_tu

# Webhook secret pre Stripe events (nájdeš v Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_tvoj_webhook_secret_tu

# ============================================
# STRIPE CUSTOMER PORTAL
# ============================================
# Stripe Customer Portal pre spravovanie predplatných
# Konfigurovať v Stripe Dashboard: Settings > Customer Portal
# Povolené operácie: cancel_subscription, update_payment_method, invoice_history

# ============================================
# AXIOM LOGGING
# ============================================
# Axiom pre štruktúrované logy a observability
# Vytvor účet ZADARMO na: https://axiom.co/
# Free tier: 500MB/mesiac, 30 dní retention
# Dataset a API token nájdeš v Settings > API Tokens
NEXT_PUBLIC_AXIOM_DATASET=taxi-vision-studio
NEXT_PUBLIC_AXIOM_TOKEN=xaat-xxx
# Voliteľne: Axiom URL pre self-hosted inštancie
# AXIOM_URL=https://api.axiom.co
